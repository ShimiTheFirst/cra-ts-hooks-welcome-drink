{
  "editor.formatOnSave": true,
  "typescript.validate.enable": true,
  "javascript.validate.enable": true,
  "typescript.format.enable": false,
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "typescriptHero.imports.insertSemicolons": false,
  "typescriptHero.imports.disableImportsSorting": false,
  "typescriptHero.imports.disableImportRemovalOnOrganize": false,
  "typescriptHero.imports.organizeOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.packageManager": "yarn",
  "typescriptHero.imports.grouping": ["Plains", "Modules", "Workspace"],
  "eslint.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
